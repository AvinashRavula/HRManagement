<%= form_for(@employee) do |f| %>  
    <div class="field"> 
      <%= f.label :name %><br> 
      <%= f.text_area :name %> 
    </div> 
    <div class="field"> 
      <%= f.label :designation %><br> 
      <%= f.text_area :designation %> 
    </div> 
    <div class="field"> 
      <%= f.label :age %><br> 
      <%= f.number_field :age %> 
    </div> 
    <div class="field"> 
        <p>
            <%= f.label :dateofjoining %><br> 
            <%= f.date_field :date_of_joining %> 
        </p>
    </div> 
    <div class="field">
        <p>
            Team Lead :
            <%= f.select(:employee_id, options_from_collection_for_select(Employee.all, :id, :name),{ :prompt => "--Select--"}) %>
        </p>
    </div>
    <div class="field">
        <p>
            Project :
            <%= f.select(:project_id, options_from_collection_for_select(Project.all, :id, :title),{ :prompt => "--Select--"}) %>
        </p>
    </div>
    <div class="field">
        <p>
            Skills :
            <%= f.select("skills", options_from_collection_for_select(Skill.all, :id, :title) ,{ :prompt => "Please select"},
            { :multiple => true, :size => 5 })
            %>
        </p>
    </div>
    <div class="actions"> 
      <%= f.submit "Create" %> 
    </div> 
  <% end %>